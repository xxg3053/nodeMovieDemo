extends ../layout

block content
	.container
		.row
			form.form-horizontal(method="post", action="/admin/movie/save")
				.form-group
					label.col-sm-2.control-label 豆瓣同步
					div.col-sm-10
						input#douban.form-control(type='text')
				if movie._id
					input(type="hidden", name="movie[_id]", value=movie._id)
				.form-group
					label.col-sm-2.control-label(for="catetory") 电影分类
					div.col-sm-10
						input#catetory.form-control(type="text", name="movie[catetoryName]", value=movie.catetoryName)
				.form-group
					label.col-sm-2.control-label(for="catetory") 分类选择
					div.col-sm-10
						each cat in catetories
							label.radio-inline
								if movie._id
									input(type='radio',name="movie[catetory]", value="#{cat._id}" 
										checked=cat._id.toString()==movie.catetory.toString())
								else
									input(type='radio',name="movie[catetory]", value="#{cat._id}")
								| #{cat.name}

				.form-group
					label.col-sm-2.control-label(for="title") 电影名字
					div.col-sm-10
						input#inputtitle.form-control(type="text", name="movie[title]", value=movie.title)
				.form-group
					label.col-sm-2.control-label(for="doctor") 导演
					div.col-sm-10
						input#inputdoctor.form-control(type="text", name="movie[doctor]", value=movie.doctor)
				.form-group
					label.col-sm-2.control-label(for="year") 上映年份
					div.col-sm-10
						input#inputyear.form-control(type="text", name="movie[year]", value=movie.year)
				.form-group
					label.col-sm-2.control-label(for="country") 国家
					div.col-sm-10
						input#inputcountry.form-control(type="country", name="movie[country]", value=movie.country)
				.form-group
					label.col-sm-2.control-label(for="language") 语言
					div.col-sm-10
						input#inputlanguage.form-control(type="text", name="movie[language]", value=movie.language)
				.form-group
					label.col-sm-2.control-label(for="poster") 封面
					div.col-sm-10
						input#inputposter.form-control(type="text", name="movie[poster]", value=movie.poster)
				.form-group
					label.col-sm-2.control-label(for="flash") 视频地址
					div.col-sm-10
						input#inputflash.form-control(type="text", name="movie[flash]", value=movie.flash)
				.form-group
					label.col-sm-2.control-label(for="summary") 简介
					div.col-sm-10
						input#inputsummary.form-control(type="text", name="movie[summary]", value=movie.summary)
				.form-group
					.col-sm-offset-2.col-sm-10
						button.btn.btn-default(type="submit") 录入
	br
	br
	br
	script(src="/assets/js/main.js")
